{
	"compilerOptions": {
		"lib": ["es2020", "DOM"],
		"module": "esnext",
		"target": "es2020",
		"resolveJsonModule": true,
		"checkJs": true,
		"allowJs": true,
		"moduleResolution": "node",
		"declaration": true,
		"skipLibCheck": true,
		"allowSyntheticDefaultImports": true,
		"outDir": "types",
	},
	"include": ["./lib/**/*.js"],
	"exclude": ["./lib/**/*.test.js"]
}
